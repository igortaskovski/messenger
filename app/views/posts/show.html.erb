<div class="mt-5 pt-5">
  <div class="d-flex align-items-center justify-content-center">
    <div class="col-sm-9">
      <h2><%= @post.title %></h2>
      <h5 class="mt-3">Posted by <%= @post.user.name %>, <%= @post.created_at.strftime("%B %d, %Y") %>.</h5>
      <p class="mt-3"><%= simple_format(@post.body) %></p>
      <div class="mt-5">
        <% if @post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %>
          <%= link_to 'Delete', @post, method: :delete, id: "delete_post", class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="headings d-flex justify-content-between align-items-center mb-3">
                <h5>Unread comments (<%= @post.comments.count %>)</h5>
                <div class="buttons"> <span class="badge bg-white d-flex flex-row align-items-center"></span>
                    </div>
            </div>
            <%= render @post.comments.includes([:user]) %>
            <hr>
        </div>
        <%= render "comments/form" %>
    </div>
</div>

  
  
